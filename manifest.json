{
  "manifest_version": 3,
  "name": "QR-Login",
  "version": "0.1",
  "description": "生成登录的二维码",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "cookies",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://linux.do/*",
    "https://*.linux.do/*"
  ],
  "web_accessible_resources": [{
    "resources": ["icons/*"],
    "matches": ["https://linux.do/*"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://linux.do/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 